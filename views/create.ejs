<!DOCTYPE html>
<html>
    <%- include('partials/head.ejs') %>
    </head>
    <body>
        <%- include('partials/header.ejs') %>
        <main>
		<div class="container" >
            <div class="row">
				<div class="col">
                    <h2 class="encabezado">Agregar Producto</h2>     
					
                    <form action="/crear" method="POST" class="form-crear">
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" class="form-control" id="name" name="name">
                          </div>
						<div class="form-group">
						  <label for="category" >Categoría</label>
						  <div>
                            <select name="category" >
                                <% for(i = 0; i < categorias.length; i++){ %>
                                    <option value="<%= categorias[i].id %>">
                                        <%= categorias[i].name %>
                                    </option>
                                <% } %>
                              </select>
                          </div>
						</div>
						<div class="form-group">
							<label for="description">Descripción</label>
							<input type="text" class="form-control" id="description" name="description">
						</div>
						<div class="form-group">
							<label for="price">Precio</label>
							<input class="form-control" id="price" name="price">
						</div>
						<div class="form-group">
							<label for="image_url">Seleccione una imagen</label>
						<input type="file" name="image_url" id="image_url"class="form-control" style="border: none;">
						</div><br>
						
						<button type="submit" class="btn btn-primary">Guardar</button>
						
					  </form>

				</div>
	    	</div>
		</div>          
        </main>
        <hr>
        
    </body>
</html>