<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
		<div class="container" >
            <div class="row">
				<div class="col">
                    <h2 class="encabezado">Editar APP</h2>     
					
					<form action="/apps/edit/<%= application.id %>" method="POST">
						
						<div class="form-group">
						  <label for="name">Nombre</label>
						  <input type="text" class="form-control" id="name" name="name" value="<%= typeof application != 'undefined' ? application.name: '' %>" >
                        </div>
                        <div class="form-group">
                            <label for="categoria">Categoria</label>
                            <input type="text" class="form-control" id="categoria" name="categoria" value="<%=application.category_id%>" >
                          </div>
						<div class="form-group">
							<label for="description">Descripci√≥n</label>
							<textarea class="form-control" id="description" name="description" value="<%=application.description%>"></textarea>
						</div>
						<div class="form-group">
							<label for="price">Precio</label>
							<input type="number" class="form-control" id="price" name="price" value="<%=application.price%>">
						</div>
					
						<button type="submit" class="btn btn-primary">Guardar</button>
						
					  </form>

				</div>
	    	</div>
		</div>          
        </main>
        <hr>
        <%- include('../partials/scripts.ejs') %>
        
    </body>
</html>