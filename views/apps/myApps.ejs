<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
          <section class="app-list" >
            <% orders.forEach(function(order) {%>
                <div>
                  <a href="apps/detail/<%= order.myApps.id %>">
                    <div class="producto">
                       <div class="card-body">
                         <img src="<%= order.myApps.image_url%>"" class="card-img-top" alt="imagen de producto">
                         <div class="card-p">
                           <p class="card-title"><%= order.myApps.name%></p>
                           <p class="card-text"><%= order.myApps.categories.name%></p>
                           <h4 class="card-text">$<%= order.myApps.price%></h4>
                         </div>
                       </div>
                     </div>
                   </a>
                </div>
              <% } %>
            <% }) %>
          </section>
        </main>
        <hr>
        <%- include('../partials/scripts.ejs') %>
        
    </body>
</html>