<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
		<div class="container" >
            <div class="row">
				<div class="col">
                    <h2 class="encabezado">Editar APP</h2>     
					
					<form action="/apps/edit/<%= application.id %>" method="POST" enctype="multipart/form-data">
						
						<div class="form-group">
						  <label for="name">Nombre</label>
						  <input type="text" class="form-control" id="name" name="name" value="<%=application.name%>" ><%=application.name%></input>
                        </div>
                        <div class="form-group">
							<label for="category" >Categoría</label>
							<div>
							  <select name="category">
								<option value="<%= application.category_id%>" selected><%= categorias[application.category_id - 1].name %></option>
								  <% for(i = 0; i < categorias.length; i++){ %>
									  <option  value="<%= categorias[i].id %>" id="category" name="category" >
										  <%= categorias[i].name %>
									  </option>
								  <% } %>
								</select>
							</div>
						  </div>
						<div class="form-group">
							<label for="description">Descripción</label>
							<textarea class="form-control" id="description" name="description" value="<%=application.description%>"><%=application.description%></textarea>
						</div>
						<div class="form-group">
							<label for="price">Precio</label>
							<input type="number" class="form-control" id="price" name="price" value="<%=application.price%>">
						</div>
						<div class="form-group">
							<label for="image_url">URL de la imagen</label>
						<input type="file" name="image_url" id="image_url"class="form-control" value="<%=application.image_url%>">
						</div><br>
					
						<button type="submit" class="btn btn-primary">Guardar</button>
						
					  </form>

				</div>
	    	</div>
		</div>          
        </main>
        <hr>
        <%- include('../partials/scripts.ejs') %>
        
    </body>
</html>